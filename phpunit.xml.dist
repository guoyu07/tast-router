<phpunit bootstrap="./vendor/autoload.php" colors="true" syntaxCheck="true">
    <testsuites>
        <testsuite name="TastRouter">
            <directory phpVersion="5.4.0">./tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>./vendor/</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>

</phpunit>